<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GraphicController.CategoryManagingController">
    <children>
        <VBox alignment="TOP_CENTER" layoutX="7.0" layoutY="22.0" prefHeight="573.0" prefWidth="786.0" spacing="10.0">
            <children>
                <Label alignment="CENTER" text="List of Categories">
                    <font>
                        <Font name="System Bold Italic" size="18.0" />
                    </font>
                </Label>
                <TableView fx:id="tableView" onMouseClicked="#userClickedOnTable" prefHeight="286.0" prefWidth="786.0">
               <columns>
                  <TableColumn fx:id="nameColumn" prefWidth="159.0" text="Category" />
                  <TableColumn fx:id="specialAttributesColumn" prefWidth="626.0" text="Special Attributes" />
               </columns>
                </TableView>
                <HBox alignment="TOP_CENTER" prefHeight="150.0" prefWidth="786.0" spacing="40.0">
                    <children>
                        <TextField fx:id="categoryNameField" prefWidth="175.0" promptText="code" />
                  <TextArea fx:id="specialAttributesField" prefHeight="200.0" prefWidth="200.0" promptText="Special Attributes" />
                    </children>
                </HBox>
                <HBox />
                <HBox alignment="TOP_CENTER" prefHeight="68.0" prefWidth="786.0" spacing="70.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#deleteButtonPushed" prefHeight="39.0" prefWidth="187.0" text="Delete Category(s) " />
                        <Button mnemonicParsing="false" onAction="#newCodeButtonPushed" text="Add new Category" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
